using System;

namespace ClassLibraryShapeAndSquare
{
    public class Ring
    {
        double R;
        public Ring(double R)
        {
            this.R = R;
        }
        public string FoundSquare()
        {
            double S = R * Math.PI;
            return "Площадь круга: "+ S ;
        }
    }
    public class Triangle
    {
        double a;
        double b;
        double c;
        public Triangle(double a,double b,double c)
        {
            this.a = a;
            this.b = b;
            this.c = c;
        }
        public string FoundSquare()
        {
            double S = a*b*c;
            return "Площадь треугольника: " + S;
        }
        public string ChekOnRectangular()
        {
            if ((Math.Pow(a, 2) == Math.Pow(b, 2) + Math.Pow(c, 2))
                || (Math.Pow(b, 2) == Math.Pow(a, 2) + Math.Pow(c, 2))
                || (Math.Pow(c, 2) == Math.Pow(b, 2) + Math.Pow(a, 2)))
                return "Треугольник прямоугольный ";
            else
                return "Треугольник не прямоугольный";
        }

    }
}
